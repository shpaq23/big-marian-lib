/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/lib",
    "target": "es2015",
    "declarationMap": true,
    "inlineSources": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "declaration": false,
    "typeRoots": [
      "node_modules/@types",
      "node_modules/phaser/types"
    ],
    "types": [
      "phaser"
    ],
    "lib": [
      "dom",
      "es2018",
      "scripthost"
    ]
  },
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts"
  ]
}
